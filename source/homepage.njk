---
pagination:
  data: site.languages
  size: 1
  alias: lang
  addAllPagesToCollections: true
layout: base.njk
permalink: "/{{lang.locale}}/"
noLangUrl: /
sitemap:
  priority: 1
  changefreq: daily
eleventyComputed:
  locale: "{{ lang.locale }}"
---

{# {{ homepage[locale] | log }} #}

<div class="spacer-4"></div>

<h1>{{ homepage[locale].teamTitle }}</h1>
<div class="spacer-1"></div>
<div class="row home-team">
  <picture class="col-7">
    <source type="image/webp" media="(min-width: 500px)" srcset="{{ homepage[locale].teamImage.url }}?w=800&fm=webp 1x, {{ homepage[locale].teamImage.url }}?w=1600&fm=webp 2x">
    <source type="image/webp" media="(max-width: 500px)"srcset="{{ homepage[locale].teamImage.url }}?w=500&fm=webp 1x, {{ homepage[locale].teamImage.url }}?w=1000&fm=webp 2x">
    <source type="image/jpeg" media="(min-width: 500px)" srcset="{{ homepage[locale].teamImage.url }}?w=800&fm=jpg 1x, {{ homepage[locale].teamImage.url }}?w=1600&fm=jpg 2x">
    <source type="image/jpeg" media="(max-width: 500px)" srcset="{{ homepage[locale].teamImage.url }}?w=500&fm=jpg 1x, {{ homepage[locale].teamImage.url }}?w=1000&fm=jpg 2x">
    <img src="{{ homepage[locale].teamImage.url }}?fm=jpg&w=800" alt="{{ homepage[locale].teamImage.alt }}"/>
  </picture>
  <p class="col-3 align-bottom">
    {{ homepage[locale].teamDescription  | striptags(true) | escape | nl2br }}
    <br/>
    <br/>
    <a href="/{{locale}}/team/" class="home-link">{{ homepage[locale].teamButtonText }}</a>
  </p>
  <div class="col-2">
  </div>
</div>

<div class="spacer-5"></div>

<div class="indented-3">
  <h1>{{ "our_prototypes" | i18n | upfirst }}</h1>
  <div class="spacer-2"></div>
  <div class="row">

    {% set length = prototypes.length if prototypes.length < 2 else 2 %} 
    {% for i in range(0, length) %}
      {% set prototype = prototypes[i] %}
      {% include "prototype_preview.njk" %}
    {% endfor %}
  </div>
  <div class="spacer-2"></div>
  <a href="/{{locale}}/prototypes/" class="text-right float-right home-link">{{ "show_more_f" | i18n }}</a>
</div>

<div class="spacer-5"></div>

<h1>Blog</h1>
<div class="spacer-2"></div>

{% set length = articles.length if articles.length < 2 else 2 %} 
{% for i in range(0, length) %}
  {% set article = articles[i] %}
  {% include "article_preview.njk" %}
{% endfor %}

<div class="spacer-2"></div>
<a href="/{{locale}}/blog/" class="home-link col-10">{{ "show_more" | i18n }}</a>

<div class="spacer-4"></div>