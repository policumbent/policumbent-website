<!doctype html>
<html lang="{{ locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if metadata.title %}
      <title>{{ metadata.title }} | {{ site[locale].basetitle }}</title>
    {% else %}
      <title>{{ site[locale].basetitle }}</title>
    {% endif %}
    <meta name="description" content="{{ metadata.description or site[locale].description }}">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{ site.root }}{{ page.url }}">

    <!-- Open graph tags -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ site.root }}{{ page.url }}">
    {% if metadata.title %}
      <meta property="og:title" content="{{ metadata.title }} | {{ site[locale].basetitle }}">
    {% else %}
      <meta property="og:title" content="{{ site[locale].basetitle }}">
    {% endif %}
    <meta property="og:description" content="{{ metadata.description or site[locale].description }}">
    <meta property="og:image" content="{{ metadata.image or site.logo }}">

    <!-- Stylesheet -->
    <link rel="stylesheet" type="text/css" href="/static/css/main.min.css">
    <link rel="stylesheet" type="text/css" href="/static/css/simpleLightbox.min.css">

    {# Preload fonts #}
    <link rel="preload" href="/static/font/inter-black/InterDisplay-Black.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/static/font/inter-regular/InterDisplay-Regular.woff2" as="font" type="font/woff2" crossorigin>
    
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/static/img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/static/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/static/img/favicon/favicon-16x16.png">
    <link rel="manifest" href="/static/img/favicon/site.webmanifest">
    <meta name="msapplication-config" content="/static/img/favicon/browserconfig.xml" />
    <meta name="msapplication-TileColor" content="009400">
    <meta name="theme-color" content="009400">
  </head>
  <body {% if bodyClass %}class="{{ bodyClass }}"{% endif %}>
    {% include "header.njk" %}
    {% block pre_container %}{% endblock %}
    {% if page.url=="/it/" or page.url=="/en/" %}
      {% include "home-animation.njk" %}
    {% endif %}
    <div id="container">      
      {{ content | safe }}
    </div>
    {% block post_container %}{% endblock %}
    {% include "footer.njk" %}
    <script src="/static/js/main.min.js"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-W8WF3R4SLE"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-W8WF3R4SLE');
  </script> 
  </body>
</html>
