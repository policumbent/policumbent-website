---
layout: base.njk
---

<a class="back-arrow" href="/{{ locale }}/blog">{{ 'back_to_articles' | i18n }}</a>
<div class="spacer-2"></div>
<p><time datetime="{{ article.date | dateISO }}">{{ article.date | dateReadable }}</time></p>
<div class="spacer-1"></div>
<h1>{{ title }}</h1>
<div class="spacer-2"></div>
<img src="{{ article.image.url }}" alt="{{ article.image.alt }}" class="featured-image"></img>
<div class="spacer-2"></div>
<div class="post-content col-8 indented-3">{{ content | safe }}</div>